# NEAR Oracle Intent Protocol - Testnet Environment Variables
# This file contains testnet-specific configuration

# NEAR Network Configuration
NEXT_PUBLIC_NEAR_NETWORK_ID=testnet
NEXT_PUBLIC_NEAR_NODE_URL=https://rpc.testnet.near.org
NEXT_PUBLIC_NEAR_WALLET_URL=https://testnet.mynearwallet.com
NEXT_PUBLIC_NEAR_HELPER_URL=https://helper.testnet.near.org

# Deployment Environment
NEXT_PUBLIC_DEPLOYMENT_ENV=testnet
NEXT_PUBLIC_ENVIRONMENT=testnet

# Contract Configuration (update with actual deployed contract IDs)
NEXT_PUBLIC_ORACLE_CONTRACT_ID=oracle-intent.nearacles.testnet
NEXT_PUBLIC_VERIFIER_CONTRACT_ID=verifier.nearacles.testnet
NEXT_PUBLIC_INTENT_MANAGER_CONTRACT_ID=intent-manager.nearacles.testnet

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL=wss://testnet-ws.nearacles.com
NEXT_PUBLIC_WEBSOCKET_PORT=8080

# Feature Flags for Testnet
NEXT_PUBLIC_FEATURE_ADVANCED_ANALYTICS=false
NEXT_PUBLIC_FEATURE_AI_INSIGHTS=true
NEXT_PUBLIC_FEATURE_AI_INTENT_OPTIMIZATION=true
NEXT_PUBLIC_FEATURE_AI_RISK_ASSESSMENT=true
NEXT_PUBLIC_FEATURE_REAL_TIME_UPDATES=true
NEXT_PUBLIC_FEATURE_DEBUG_MODE=true
NEXT_PUBLIC_FEATURE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_FEATURE_CACHING_ENABLED=true
NEXT_PUBLIC_FEATURE_ENHANCED_SECURITY=true
NEXT_PUBLIC_FEATURE_RATE_LIMITING=true
NEXT_PUBLIC_FEATURE_EXPERIMENTAL_SOLVERS=false
NEXT_PUBLIC_FEATURE_MOCK_DATA=false
NEXT_PUBLIC_FEATURE_STRESS_TESTING=false

# Analytics Configuration
NEXT_PUBLIC_ANALYTICS_ENABLED=false
NEXT_PUBLIC_ANALYTICS_DEBUG=true

# Error Tracking
NEXT_PUBLIC_ERROR_TRACKING_ENABLED=true
NEXT_PUBLIC_ERROR_TRACKING_DEBUG=true

# Performance Monitoring
NEXT_PUBLIC_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_PERFORMANCE_DEBUG=true

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://testnet-api.nearacles.com
NEXT_PUBLIC_API_TIMEOUT=10000

# Security Configuration
NEXT_PUBLIC_ENABLE_CORS=true
NEXT_PUBLIC_ALLOWED_ORIGINS=https://testnet.nearacles.com,http://localhost:3000

# Development Helpers
NEXT_PUBLIC_SHOW_DEBUG_INFO=true
NEXT_PUBLIC_ENABLE_CONSOLE_LOGS=true