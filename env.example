# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development
PORT=3000

# NEAR Protocol Configuration
NEAR_NETWORK=testnet
NEAR_RPC_URL=https://rpc.testnet.near.org
NEAR_WALLET_URL=https://wallet.testnet.near.org
NEAR_HELPER_URL=https://helper.testnet.near.org

# Oracle Configuration
ORACLE_ACCOUNT_ID=your-oracle.testnet
ORACLE_PRIVATE_KEY=your_private_key_here

# AI/ML Service Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourapp.com
CSP_REPORT_URI=https://your-csp-report-endpoint.com/report
SECURITY_HEADERS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring and Analytics
ANALYTICS_ENABLED=false
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# Database (if applicable)
DATABASE_URL=your_database_connection_string

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here

# Development Only
DEBUG=false
ENABLE_PLAYGROUND=false
