# NEAR Oracle Intent Protocol - Testnet Configuration Template
# Copy this file to testnet.env and fill in your actual values

# Network Configuration
NEAR_NETWORK_ID=testnet
NEAR_NODE_URL=https://rpc.testnet.near.org
NEAR_WALLET_URL=https://wallet.testnet.near.org
NEAR_EXPLORER_URL=https://explorer.testnet.near.org

# Account Configuration (REPLACE WITH YOUR ACTUAL ACCOUNTS)
OWNER_ACCOUNT_ID=your-account.testnet
CONTRACT_ACCOUNT_ID=oracle-intent.your-account.testnet
TEST_SOLVER_ACCOUNT=solver1.your-account.testnet
TEST_USER_ACCOUNT=user1.your-account.testnet

# Contract Configuration
INITIAL_ADMIN_DEPOSIT=10000000000000000000000000  # 10 NEAR
SOLVER_REGISTRATION_DEPOSIT=2000000000000000000000000  # 2 NEAR
MINIMUM_INTENT_DEPOSIT=1000000000000000000000000  # 1 NEAR

# Performance Tuning
MAX_GAS_PER_CALL=300000000000000  # 300 TGas
STORAGE_PRICE_PER_BYTE=10000000000000000000  # 0.01 NEAR per byte

# Oracle Configuration
DEFAULT_CONFIDENCE_THRESHOLD=0.8
DEFAULT_REQUIRED_SOURCES=3
DEFAULT_CHALLENGE_PERIOD_HOURS=24
MAX_INTENT_DEADLINE_HOURS=168  # 1 week

# Network Timeouts
API_TIMEOUT_MS=30000
WEBSOCKET_TIMEOUT_MS=60000
CONTRACT_CALL_TIMEOUT_MS=120000

# Security Configuration
MAX_RETRY_ATTEMPTS=3
RATE_LIMIT_PER_MINUTE=100
ENABLE_REQUEST_LOGGING=true

# Infrastructure Configuration
WEBSOCKET_PORT=8080
METRICS_PORT=9090
HEALTH_CHECK_PORT=8081

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_LOGGING=true
LOG_LEVEL=info
METRICS_RETENTION_DAYS=30

# Frontend Configuration (REPLACE WITH YOUR ACTUAL DEPLOYMENT URLS)
FRONTEND_URL=https://your-frontend-domain.com
API_BASE_URL=https://your-api-domain.com
WEBSOCKET_URL=wss://your-websocket-domain.com

# Testing Configuration
ENABLE_TEST_MODE=true
TEST_DATA_SEED=nearacles-testnet-2024
LOAD_TEST_CONCURRENT_USERS=50
PERFORMANCE_TEST_DURATION_MINUTES=30