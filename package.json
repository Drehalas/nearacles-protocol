{
  "name": "nearacles-protocol",
  "version": "1.0.0",
  "description": "NEAR Intent Protocol for Nearacles Oracle Network",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:contracts": "jest tests/smart-contracts/",
    "test:integration": "jest tests/smart-contracts/integration.test.ts",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "deploy:testnet": "near deploy --accountId verifier.testnet",
    "deploy:mainnet": "near deploy --accountId verifier.near"
  },
  "keywords": [
    "near",
    "intent",
    "oracle",
    "defi",
    "blockchain",
    "smart-contracts",
    "ai",
    "trading"
  ],
  "author": "Nearacles Team",
  "license": "MIT",
  "dependencies": {
    "@near-js/crypto": "^1.2.1",
    "@near-js/keystores": "^0.0.5",
    "axios": "^1.6.0",
    "big.js": "^6.2.1",
    "bs58": "^6.0.0",
    "crypto": "^1.0.1",
    "near-api-js": "^2.1.4",
    "openai": "^5.12.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.9",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "near-workspaces": "^5.0.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Drehalas/nearacles-protocol.git"
  },
  "bugs": {
    "url": "https://github.com/Drehalas/nearacles-protocol/issues"
  },
  "homepage": "https://github.com/Drehalas/nearacles-protocol#readme"
}
