{
  "name": "nearacles-protocol",
  "version": "0.2.0",
  "type": "module",
  "description": "NEAR Intent-Based Oracle Protocol for decentralized credibility evaluation and fact-checking",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:contracts": "jest tests/smart-contracts --testTimeout=60000",
    "test:e2e": "tsx tests/testnet/testnet-runner.ts",
    "test:e2e:testnet": "tsx tests/testnet/testnet-runner.ts -- --network testnet",
    "test:e2e:verbose": "tsx tests/testnet/testnet-runner.ts -- --verbose",
    "validate:testnet": "tsx tests/testnet/testnet-runner.ts -- --network testnet --verbose",
    "test:performance": "tsx tests/performance/performance-runner.ts",
    "test:performance:light": "tsx tests/performance/performance-runner.ts -- --scenario light",
    "test:performance:heavy": "tsx tests/performance/performance-runner.ts -- --scenario heavy",
    "test:performance:all": "tsx tests/performance/performance-runner.ts -- --scenario all",
    "test:security": "tsx tests/security/security-runner.ts",
    "test:security:verbose": "tsx tests/security/security-runner.ts -- --verbose",
    "audit:security": "tsx tests/security/security-runner.ts -- --verbose",
    "lint": "eslint backend/**/*.ts",
    "lint:fix": "eslint backend/**/*.ts --fix",
    "audit": "npm audit --audit-level high",
    "audit:fix": "npm audit fix",
    "security:check": "npm audit && npm run lint:security",
    "lint:security": "eslint backend/**/*.ts --config .eslintrc.security.cjs",
    "clean": "rm -rf dist",
    "demo": "npm run build && node dist/examples/intent-oracle-demo.js",
    "start-solver": "npm run build && node -e \"import('./dist/services/oracle-solver-node.js').then(m => new m.OracleSolverNode({}).start())\"",
    "test:intent": "tsx scripts/test-near-intent.ts",
    "test:testnet": "tsx testnet-swap.ts",
    "swap:testnet": "tsx testnet-real-swap.ts",
    "swap:classic": "tsx classic-swap.ts",
    "swap:fixed": "tsx fixed-swap.ts",
    "swap:working": "tsx working-swap.ts",
    "dex:test": "tsx real-testnet-dex.ts",
    "swap:mainnet": "tsx mainnet-real-swap.ts",
    "strategy": "tsx smart-contract-calls-strategy.ts",
    "wallets": "tsx wallet-config.ts"
  },
  "keywords": [
    "oracle",
    "credibility",
    "fact-checking",
    "blockchain",
    "near",
    "intent",
    "decentralized",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@near-js/client": "^2.2.5",
    "@near-js/crypto": "^2.2.5",
    "@near-js/keystores": "^2.2.5",
    "@near-js/transactions": "^2.2.5",
    "@types/ws": "^8.18.1",
    "bs58": "^6.0.0",
    "dotenv": "^17.2.1",
    "near-api-js": "^6.2.5",
    "openai": "^5.3.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bs58": "^4.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "jest": "^29.0.0",
    "near-workspaces": "^4.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "contracts/",
    "README.md",
    "CLAUDE.md"
  ]
}
